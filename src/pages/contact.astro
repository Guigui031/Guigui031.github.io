---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="Contact - Guillaume Genois" sideBarActiveItemID="contact">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Contact</div>
    <div class="text-5xl font-bold">Get In Touch</div>
    <div class="py-2">
      <text class="text-lg">
        I'm always open to discussing new opportunities, collaborations, or simply having a chat about technology and innovation.
      </text>
    </div>

    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Contact Information -->
      <div class="space-y-6">
        <h2 class="text-2xl font-bold mb-4">Contact Information</h2>

        <!-- Email -->
        <div class="flex items-center space-x-4 p-4 bg-base-200 rounded-lg">
          <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <div class="font-semibold">Email</div>
            <a href="mailto:guillaume.genois@mila.quebec" class="text-primary hover:underline">
              guillaume.genois@mila.quebec
            </a>
            <div class="text-sm opacity-70">Preferred for professional inquiries</div>
          </div>
        </div>

        <!-- Phone -->
        <div class="flex items-center space-x-4 p-4 bg-base-200 rounded-lg">
          <div class="w-12 h-12 bg-secondary rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <div>
            <div class="font-semibold">Phone</div>
            <a href="tel:+15141234567" class="text-secondary hover:underline">
              +1 (514) 123-4567
            </a>
            <div class="text-sm opacity-70">Available Mon-Fri, 9 AM - 6 PM EST</div>
          </div>
        </div>

        <!-- Location -->
        <div class="flex items-center space-x-4 p-4 bg-base-200 rounded-lg">
          <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-accent-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div>
            <div class="font-semibold">Location</div>
            <div>Montreal, Quebec, Canada</div>
            <div class="text-sm opacity-70">Open to remote opportunities</div>
          </div>
        </div>

        <!-- LinkedIn -->
        <div class="flex items-center space-x-4 p-4 bg-base-200 rounded-lg">
          <div class="w-12 h-12 bg-info rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-info-content" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold">LinkedIn</div>
            <a href="https://www.linkedin.com/in/guillaume-genois-922571144/" target="_blank" class="text-info hover:underline">
              linkedin.com/in/guillaumegenois
            </a>
            <div class="text-sm opacity-70">Professional networking</div>
          </div>
        </div>

        <!-- GitHub -->
        <div class="flex items-center space-x-4 p-4 bg-base-200 rounded-lg">
          <div class="w-12 h-12 bg-neutral rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-neutral-content" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold">GitHub</div>
            <a href="https://github.com/Guigui031" target="_blank" class="text-neutral hover:underline">
              github.com/Guigui031
            </a>
            <div class="text-sm opacity-70">View my code and projects</div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="space-y-6">
        <h2 class="text-2xl font-bold mb-4">Send a Message</h2>

        <form id="contactForm" class="space-y-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Name</span>
            </label>
            <input type="text" name="name" class="input input-bordered w-full" placeholder="Your name" required>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Email</span>
            </label>
            <input type="email" name="email" class="input input-bordered w-full" placeholder="your.email@example.com" required>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Subject</span>
            </label>
            <input type="text" name="subject" class="input input-bordered w-full" placeholder="Your subject" required>
            <!-- <select name="subject" class="select select-bordered w-full" required>
              <option disabled selected>Choose a topic</option>
              <option value="collaboration">Collaboration Opportunity</option>
              <option value="job">Job Opportunity</option>
              <option value="project">Project Discussion</option>
              <option value="consulting">Consulting Inquiry</option>
              <option value="other">Other</option>
            </select> -->
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Message</span>
            </label>
            <textarea name="message" class="textarea textarea-bordered h-32 w-full" placeholder="Tell me about your project or opportunity..." required></textarea>
          </div>

          <button type="submit" id="submitBtn" class="btn btn-primary w-full">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            <span id="submitText">Send Message</span>
          </button>
        </form>

        <!-- Status messages -->
        <div id="statusMessage" class="hidden"></div>

        <div class="divider">OR</div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-2 gap-4">
          <a href="mailto:guillaume.genois@mila.quebec" class="btn btn-outline btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email Me
          </a>
          <a href="tel:+15141234567" class="btn btn-outline btn-secondary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Me
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script is:inline src="/scripts/contact-en.js"></script>
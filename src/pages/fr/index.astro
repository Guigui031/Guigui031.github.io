---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import { useTranslations } from "../../i18n/utils";

const t = useTranslations('fr');

const posts = (await getCollection("blog"))
  .filter(post => post.slug.startsWith('fr/'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const projects = (await getCollection("projects"))
  .filter(project => project.slug.startsWith('fr/') || !project.slug.includes('/'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home" title={t('site.title')} description={t('site.description')}>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">{t('hero.subtitle')}</div>
    <div class="text-5xl font-bold">Guillaume Genois</div>
    <div class="text-3xl py-3 font-bold">Software Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        {t('hero.description')}
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://twitter.com/manuelernestog" target="_blank"> Twitter</a>
      <a href="https://github.com/manuelernestog" target="_blank" class="btn btn-outline ml-5"> 
        GitHub
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">{t('blog.title')} {"</>"}</div>
  </div>

  {
    posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/fr/blog/" + post.slug.replace('fr/', '')}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0"></div>
      </>
    ))
  }

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">{t('projects.title')} {"</>"}</div>
  </div>

  {
    projects.map((project) => (
      <>
        <HorizontalCard
          title={project.data.title}
          img={project.data.heroImage}
          desc={project.data.description}
          url={project.slug.startsWith('fr/') ? "/fr/projects/" + project.slug.replace('fr/', '') : "/fr/projects/" + project.slug}
          badge={project.data.badge}
        />
        <div class="divider my-0"></div>
      </>
    ))
  }
</BaseLayout>
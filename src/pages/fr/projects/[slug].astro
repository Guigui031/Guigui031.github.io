---
import { type CollectionEntry, getCollection } from "astro:content";
import PostLayout from "../../../layouts/PostLayout.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects
    .filter(project => project.slug.startsWith('fr/') || !project.slug.includes('/'))
    .map((project) => ({
      params: { slug: project.slug.startsWith('fr/') ? project.slug.replace('fr/', '') : project.slug },
      props: project,
    }));
}

type Props = CollectionEntry<"projects">;

const project = Astro.props;
const { Content } = await project.render();
---

<PostLayout title={project.data.title} description={project.data.description} pubDate={project.data.pubDate} heroImage={project.data.heroImage} badge={project.data.badge}>
  <Content />
</PostLayout>
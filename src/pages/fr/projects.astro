---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import { useTranslations } from "../../i18n/utils";

const t = useTranslations('fr');

const projects = (await getCollection("projects"))
  .filter(project => project.slug.startsWith('fr/') || !project.slug.includes('/'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const mlProjects = projects.filter(project => project.data.category === 'machine-learning');
const otherProjects = projects.filter(project => project.data.category !== 'machine-learning');
---

<BaseLayout title={t('projects.title')} sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Machine Learning Projects</div>
  </div>

  {mlProjects.map((project) => (
    <>
      <HorizontalCard
        title={project.data.title}
        img={project.data.heroImage}
        desc={project.data.description}
        url={project.slug.startsWith('fr/') ? "/fr/projects/" + project.slug.replace('fr/', '') : "/fr/projects/" + project.slug}
        // target="_self"
        badge={project.data.badge}
        tags={project.data.tags}
      />
      <div class="divider my-0"></div>
    </>
  ))}

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Miscellaneous Projects</div>
  </div>

  {otherProjects.map((project) => (
    <>
      <HorizontalCard
        title={project.data.title}
        img={project.data.heroImage}
        desc={project.data.description}
        url={project.slug.startsWith('fr/') ? "/fr/projects/" + project.slug.replace('fr/', '') : "/fr/projects/" + project.slug}
        // target="_self"
        badge={project.data.badge}
        tags={project.data.tags}
      />
      <div class="divider my-0"></div>
    </>
  ))}
</BaseLayout>
